.row
  .col-sm-10.offset-sm-1.col-md-6.offset-md-3
    %h2= I18n.t('authy_verify_installation_title', {:scope => 'devise'})
    = verify_authy_installation_form do
      .field.my-4
        %legend= I18n.t('submit_token_title', {:scope => 'devise'})
        = label_tag :token
        = text_field_tag :token, "", :autocomplete => :off, :id => 'authy-token', :class => 'form-control'
      .actions.mt-3.my-3
        = authy_request_sms_link :class => 'btn btn-outline-warning'
        = submit_tag I18n.t('enable_my_account', {:scope => 'devise'}), :class => 'btn btn-outline-primary mx-3'