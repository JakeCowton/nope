.row
  .col-sm-10.offset-sm-1.col-md-6.offset-md-3
    %h2= I18n.t('authy_register_title', {:scope => 'devise'})
    = enable_authy_form do
      .field.my-4
        = text_field_tag :country_code, '', :autocomplete => :off, :placeholder => I18n.t('devise.country'), :id => "authy-countries", class: 'form-control form-control-lg'
      .field.my-4
        = text_field_tag :cellphone, '', :autocomplete => :off, :placeholder => 'Enter your phone number', :id => "authy-cellphone", class: 'form-control form-control-lg'
      .actions.mt-3.my-3
        %p= submit_tag I18n.t('enable_authy', {:scope => 'devise'}), :class => 'btn btn-outline-primary mx-3'
