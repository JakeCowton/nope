#login-block
  .row
    .col-sm-10.offset-sm-1.col-md-6.offset-md-3
      %h2 Log in
      = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
        .field.my-4
          = f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control form-control-lg', placeholder: 'email address'
        .field.my-4
          = f.password_field :password, autocomplete: "off", class: 'form-control form-control-lg', placeholder: 'password'

        - if devise_mapping.rememberable?
          .field.my-5
            = f.check_box :remember_me
            = f.label :remember_me
        .actions.mt-3.my-3
          = f.submit "Log in", class: 'btn btn-outline-primary btn-lg'
      .my-5
        = render "devise/shared/links"
