#login-block.block.pt-5
  .row
    .col-sm-5.offset-sm-1
      %h2.my-5 Log in
      = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
        .field.my-4
          .row
            .col-md-4.col-sm-12
              %h2.pt-1= f.label :email, class: 'control-label-lg'
            .col-md-8.col-sm-12
              = f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control form-control-lg'
        .field.my-4
          .row
            .col-md-4.col-sm-12
              %h2.pt-1= f.label :password
            .col-md-8.col-sm-12
              = f.password_field :password, autocomplete: "off", class: 'form-control form-control-lg'

        - if devise_mapping.rememberable?
          .field.my-5
            = f.check_box :remember_me
            = f.label :remember_me
        .actions.mt-3.my-3
          = f.submit "Log in", class: 'btn btn-outline-primary btn-lg'
      .my-5
        = render "devise/shared/links"
