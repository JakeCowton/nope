%nav.navbar.navbar-expand-md.navbar-dark.bg-dark.mb-5
  %button.navbar-toggler{type: 'button', data: {toggle: 'collapse', target: '#navbar-content'}}
    %span.navbar-toggler-icon
  %a.navbar-brand{href: '/'}
    Nope
  .collapse.navbar-collapse.navbar-nav
    %ul.navbar-nav.ml-auto
      - if !current_user
        %li.nav-item.mx-3
          = link_to 'Sign up', new_user_registration_path, class: 'nav-link my-3'
        %li.nav-item.mx-3
          = link_to 'Sign in', new_user_session_path, class: 'nav-link my-3'
      - elsif current_user
        %li.nav-item.dropdown.mx-3
          = button_to destroy_user_session_url, method: :delete, class: 'btn btn-outline-danger my-3' do
            %i.fas.fa-sign-out-alt
            Log Out