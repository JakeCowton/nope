%li.list-group-item.profile{id: "profile-#{profile.id}"}
	.d-flex.justify-content-center.align-items-center
		= link_to profile do
			.mr-auto.p-2
				%strong= profile.name
				.badge.badge-info= profile.messages.size
		.p-2.ml-auto
			= link_to edit_profile_path(profile), class: 'btn btn-outline-info', remote: true do
				= image_tag(asset_url('iconic/cog.svg'))
			%button.btn.btn-outline-info.copy-button.ml-2{data: {toggle: 'tooltip', placement: 'top', clipboard: { text: profile.email_address}}}
				= image_tag(asset_url('iconic/clipboard.svg'))

