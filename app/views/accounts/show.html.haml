.row
  .col-sm-8
    %ul.list-group
      %li.list-group-item
        %h4 Account Data
      - @account.to_json.each do |k,v|
        %li.list-group-item
          %strong= k
          .pull-right
            = v

  .col-sm-4
    %ul.list-group
      %li.list-group-item
        %h4 Users
      - @account.users.each do |user|
        %li.list-group-item
          = link_to user.email, user