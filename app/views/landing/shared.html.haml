= content_for :head do
  :css
    body:before {
      background-image: linear-gradient(to top, rgba(31,31,31,0.851), rgba(31,31,31,0.851)), url('http://fc-carrd-assets.s3-eu-west-2.amazonaws.com/images/shared_bg.jpg');
    }
  %title Shared Profiles
  %meta{:content => "Share your Fair Custodian profiles", :name => "description"}/
= content_for :body do
  %body.is-loading
    #wrapper
      #main
        .inner
          %h1#text02 Share your Fair Custodian profiles
          %hr#divider02/
          %p#text01 Share the Fair Custodian profiles that you've used to sign up for whitepapers, product trials, free WiFi, etc.. with the rest of your team, whilst still keeping your personal profiles private.
          %form#form01{:action => "/submit", :enctype => "multipart/form-data", :method => "post"}
            = hidden_field_tag :authenticity_token, form_authenticity_token
            .inner
              .field
                %input#form01-email-address{:maxlength => "128", :name => "email-address", :placeholder => "Email Address", :required => "", :type => "text"}/
              .actions
                %button{:type => "submit"} Submit
            %input{:name => "id", :type => "hidden", :value => "form01"}/
            %input{:name => "page", :type => "hidden", :value => "shared-interest"}/
          #image01
            %a.image{href: '/'}
              %img{:alt => "", :src => "https://fc-carrd-assets.s3-eu-west-2.amazonaws.com/images/gdpr_image01.svg"}/
    %script{:src => "https://fc-carrd-assets.s3-eu-west-2.amazonaws.com/gdpr_main.js"}
